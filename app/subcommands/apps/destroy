#!/bin/sh
# Description: Destroy containers and volumes for a specific app
# Usage: <APP_NAME>
# vim: ft=sh ts=4 sw=4 sts=4 noet
set -euf

# shellcheck disable=SC1090
. "$DAB/lib/docker.sh"
# shellcheck disable=SC1090
. "$DAB/lib/output.sh"

[ -n "${1:-}" ] || fatality 'must provide an app name'

dpose "$1" rm --stop -v -f
carelessly dpose "$1" down --volumes
